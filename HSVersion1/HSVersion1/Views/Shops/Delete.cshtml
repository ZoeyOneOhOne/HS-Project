@model HSVersion1.Models.Shop
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you would like to delete this video?
</p>
<ul>
    <li>Title: @Model.Name</li>
    <li>Description: @Model.Description (@Model.Hours)</li>
</ul>
@using (Html.BeginForm("DoDelete", "Shops", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("No, back to shops", "Index")
}