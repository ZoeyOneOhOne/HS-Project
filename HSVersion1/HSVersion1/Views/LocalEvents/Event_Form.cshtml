@model HSVersion1.Models.LocalEvents

@{
    ViewBag.Title = "Event_Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">
    @Html.LabelFor(m => m.Event)
    @Html.TextBoxFor(m => m.Event, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Location)
    @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", type="datetime-local" } })
    @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
</div>

@Html.HiddenFor(m => m.Id)
<input type="submit" class="btn btn-primary" value="Save" />
