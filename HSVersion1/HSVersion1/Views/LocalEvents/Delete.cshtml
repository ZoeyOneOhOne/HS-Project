@model HSVersion1.Models.LocalEvents
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<p>
    Are you sure you would like to delete this video?
</p>

<ul>
    <li> @Model.Event</li>
</ul>

@using (Html.BeginForm("DoDelete", "LocalEvents", FormMethod.Post))
{

    @Html.HiddenFor(m => m.Id)
    <input type="submit" class="btn btn-danger" value="Yes, Delete it!" />
    @Html.ActionLink("No, back to events", "IndexPartial")
}
